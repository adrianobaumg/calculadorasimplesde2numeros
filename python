name = input('Seu nome:')
n1 = float(input('Digite um n√∫mero:'))
n2 = float(input('Digite outro n√∫mero:'))
print(f'{"":=^30}')
print('O sucessor de {} √© {} e'.format(n1, n1+1), end=' ')
print('o seu antecessor √© {}'.format(n1-1))
print('O sucessor de {} √© {} e'.format(n2, n2+1), end=' ')
print('o seu antecessor √© {}'.format(n2-1))
print(f'{"":=^30}')
s = n1+n2
d1 = n1-n2
d2 = n2-n1
print('A soma entre {} e {} √© {}'.format(n1, n2, s))
print('A diferen√ßa entre {} e {} √© igual a  {}:'.format(n1, n2, d1))
print('J√° a diferen√ßa entre {} e {} √© igual a {}'.format(n2, n1, d2))
print(f'{"":=^30}')
m = n1*n2
di = n1/n2
di2 = n2/n1
dt1 = n1//n2
dt2 = n2//n1
res1 = n1 % n2
res2 = n2 % n1
med = (n1+n2)/2
print('A m√©dia entre {} e {} √© {}'.format(n1, n2, med))
print('A divis√£o entre {} e {} √© {}'.format(n1, n2, di))
print('A divis√£o entre {} e {} √© {}'.format(n2, n1, di2))
print('A divis√£o inteira entre {} e {} √© {} e ter√° resto {}'.format(n1, n2, dt1, res1))
print('A divis√£o inteira entre {} e {} √© {} e ter√° resto {}'.format(n2, n1, dt2, res2))
print(f'{"":=^30}')
pot = n1**n2
pot2 = n2**n1
raz = n1**0.5
raz2 = n2**0.5
print('A potencializa√ß√£o entre {} e {} √© {}'.format(n1, n2, pot))
print('J√° ao contr√°rio, a potencializa√ß√£o entre {} e {} √© {}'.format(n2, n1, pot2))
print('A raiz quadrada de {} √© {}'.format(n1, raz))
print('A raiz quadrada de {} √© {}'.format(n2, raz2))
print(f'{"":=^30}')
print('Obrigado(a) {} por utilizar essa calculadora, voc√™ √© {:üòé^30}!'.format(name, name+'INCR√≠VEL'))
